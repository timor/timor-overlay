From: timor <timor.dd@googlemail.com>
Date: Sat, 26 Jan 2019 16:45:50 +0100
Subject: [PATCH 01/12] core-load-paths: distinguish between spacemacs source
 and user directory

---
 core/core-load-paths.el | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/core/core-load-paths.el b/core/core-load-paths.el
index 56e6f6dd9..f4fb6053c 100644
--- a/core/core-load-paths.el
+++ b/core/core-load-paths.el
@@ -29,13 +29,13 @@
 
 ;; paths
 (defvar spacemacs-start-directory
-  user-emacs-directory
+  (concat (file-name-directory (or load-file-name (buffer-file-name))) "../")
   "Spacemacs start directory.")
 (defconst spacemacs-core-directory
   (expand-file-name (concat spacemacs-start-directory "core/"))
   "Spacemacs core directory.")
 (defconst spacemacs-private-directory
-  (expand-file-name (concat spacemacs-start-directory "private/"))
+  (expand-file-name (concat user-emacs-directory "private/"))
   "Spacemacs private directory.")
 (defconst spacemacs-info-directory
   (expand-file-name (concat spacemacs-core-directory "info/"))
